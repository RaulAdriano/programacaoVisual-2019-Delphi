  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TFAula01 = class(TForm)
    BHello: TButton;
    ENome: TEdit;
    procedure BHelloClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

